{
  "permissions": {
    "allow": [
      "Bash(clawdbot --help:*)",
      "Bash(clawdbot config:*)",
      "Bash(clawdbot models --help:*)"
    ]
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/precompact_checkpoint.py"
          },
          {
            "type": "command",
            "command": "python3 ~/agents/obsidian-agent/update_vault.py 2>&1 | tee -a /tmp/obsidian-agent.log"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/sessionstart_restore_state.py"
          }
        ]
      }
    ]
  }
}
